<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.picsagainsthumanity.app.MainActivity" >

    <EditText
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="@string/label_username"
        android:textSize="@dimen/basicTitleSize" />

    <EditText
        android:id="@+id/passwordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/usernameTextView"
        android:layout_alignRight="@id/usernameTextView"
        android:layout_below="@id/usernameTextView"
        android:hint="@string/label_password"
        android:inputType="textPassword"
        android:textSize="@dimen/basicTitleSize" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordTextView"
        android:layout_alignRight="@+id/passwordTextView"
        android:layout_below="@+id/passwordTextView"
        android:text="@string/label_login"
        android:textSize="@dimen/basicTitleSize"
        android:onClick="onClick" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginButton"
        android:layout_alignRight="@+id/loginButton"
        android:layout_below="@+id/loginButton"
        android:text="@string/label_signup"
        android:textSize="@dimen/basicTitleSize" />

</RelativeLayout>